{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": false,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "typeRoots": ["./types/modules", "./node_modules/@types"],
        "esModuleInterop": true,
        "sourceMap": false,    // turn on for debug ~ 20 MB
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["./node_modules", "**/__mocks__/*", "**/__tests__/*"],
    "include": ["./src"]
}
